<%= form_for @category_new, html: { class: "max-w-md mx-auto" } do |f| %>
  <div class="mb-5">
    <%= f.label :name, 'Название', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <%= f.submit "Создать категорию", class: "rounded-lg mb-5 py-3 px-5 bg-blue-600 text-white block font-medium" %>
<% end %>
